<%= form_for [@cocktail, @dose] do |f| %>

  <% if @dose.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @dose.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :ingredient %>
    <%= f.collection_select :ingredient_id, Ingredient.all, :id, :name %>

    <%= f.submit %>

<% end %>



